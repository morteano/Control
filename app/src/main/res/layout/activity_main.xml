<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".FirstScreen">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/leftarrow"
        android:background="@drawable/arrowleft"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="pressedUpButton"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/uparrow"
        android:background="@drawable/arrowup"
        android:layout_above="@+id/leftarrow"
        android:layout_toRightOf="@+id/leftarrow"
        android:layout_toEndOf="@+id/leftarrow" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/rightarrow"
        android:layout_toEndOf="@+id/uparrow"
        android:background="@drawable/arrowright"
        android:layout_below="@+id/uparrow"
        android:layout_toRightOf="@+id/uparrow" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/downarrow"
        android:background="@drawable/arrowdown"
        android:layout_toLeftOf="@+id/rightarrow"
        android:layout_below="@+id/leftarrow"
        android:layout_toRightOf="@+id/leftarrow" />


    <TextView
        android:text="press a button"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testOutput"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
